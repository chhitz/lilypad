TOPSRCDIR = @top_srcdir@
TOPOBJDIR = ../..
SRCDIR    = @srcdir@
VPATH     = @srcdir@
MODULE    = lilypad.exe
APPMODE   = -mwindows
IMPORTS   = comdlg32 shell32 user32 gdi32 msvcrt advapi32 kernel32
EXTRAINCL = -I$(TOPSRCDIR)/include/msvcrt
EXTRADEFS = -DNO_LIBWINE_PORT

C_SRCS = \
	License_En.c \
	dialog.c \
	license.c \
	main.c

RC_SRCS = rsrc.rc

@MAKE_PROG_RULES@

### Dependencies:

ALL_OBJS := $(OBJS)
WRC := @WCR@
CPPFLAGS = -DUNICODE @CPPFLAGS@
RC := $(WCR) $(CPPFLAGS)

ifeq ($(MODULE),lilypad.exe)
all: lilypad-ascii.exe
install:: install-lilypad-ascii
endif

lilypad-ascii.exe: lilypad.exe
	rm -f $(OBJS)
	$(MAKE) MODULE=$@ CPPFLAGS=-UUNICODE
	touch lilypad.exe

install-lilypad-ascii:
	$(MAKE) MODULE=lilypad-ascii.exe install
